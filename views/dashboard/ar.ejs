<!-- Header -->
<%- include('layautsDashboard/header') %>

<body class="main-body leftmenu body-ingreso">

  <%- include('layautsDashboard/loader') %>

  <!-- Page -->
  <div class="page">

    <!-- Menu -->
    <%- include('layautsDashboard/menu') %>

    <!-- Cabecera -->
    <%- include('layautsDashboard/head') %>

    <!-- Main Content-->
    <div class="main-content side-content pt-0">

      <div class="container-fluid">
        <div class="inner-body">

          <!-- Page Header -->
          <div class="page-header">
            <div>
              <h2 class="main-content-title tx-24 mg-b-5"><%- titulo %></h2>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard/inicio">Inicio</a></li>
                <li class="breadcrumb-item active" aria-current="page"><%- breadcrumb %></li>
              </ol>
            </div>
          </div>
          <!-- End Page Header -->

          <style>
            #default-ar-button {
                position: absolute;
                bottom: 16px;
                right: 42% !important;
                transform: scale(var(--ar-button-scale, 1));
                transform-origin: bottom right;
            }

            .Hotspot {
                top: -20vh !important;
                position: absolute !important;
                left: -27vw !important;
                width: 200px !important;
                border: 1px solid #3225bc !important;
                background: #3225bc !important;
                border-radius: 10px !important;
                color: white !important;
            }

            .Hotspot:hover {
                border: 1px solid #f1388b !important;
                background: #f1388b !important;
                color: white !important;
            }
          </style>

            <model-viewer class="w-100" style="height: 60vh !important;"  img src="/assetsDashboard/images/fauna/Buho.gltf" ar ar-modes="scene-viewer webxr" camera-controls poster="<%= album.patt %>" shadow-intensity="1" autoplay>
            <button class="Hotspot" style="top: -20vh !important; position: absolute !important; left: -25vw !important; width: 200px !important;" slot="hotspot-1" position="-0.004060092693080386m 0.5627412661571248m -0.13664164649841892m" data-normal="-0.1334930166134225m 0.7266357060660863m 0.6739289021738782m" data-visibility-attribute="visible">
                <div class="HotspotAnnotation"><%= album.nombre %></div>
            </button>
            </model-viewer> 
        
        </div>
      </div>
    </div>
    <!-- End Main Content-->

    <!-- Foot -->
    <%- include('layautsDashboard/foot') %>

    <!-- Notificiaciones -->
    <%- include('layautsDashboard/notificaciones') %>

  </div>
  <!-- End Page -->

  <!-- Footer -->
  <%- include('layautsDashboard/botones') %>
  <%- include('layautsDashboard/footer') %>

<script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
<script nomodule src="https://unpkg.com/@google/model-viewer/dist/model-viewer-legacy.js"></script>

<script type="text/javascript">
    swal({
        title: "<%= titulo %>",
        text: "<%= mensaje %>",
        type: "<%= type %>",
        confirmButtonColor: '#57a94f',
        closeOnClickOutside: false
    });
</script>
